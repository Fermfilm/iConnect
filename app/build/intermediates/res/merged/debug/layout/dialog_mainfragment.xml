<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="600dp"
                android:layout_height="350dp"

                >





                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom">

                    <ImageButton
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:scaleType="centerCrop"
                        android:id="@+id/d_man_image"
                        android:background="@drawable/unknown"
                        android:layout_marginTop="@dimen/padding_size_SS"
                        android:layout_marginLeft="@dimen/padding_size_SS"
                        android:layout_marginRight="@dimen/padding_size_SS"
                        android:layout_marginBottom="@dimen/padding_size_SS"
                        />




                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5">

                            <ImageButton
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:id="@+id/d_cloth_image"
                                android:layout_below="@+id/request_label"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center" />

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:id="@+id/d_cloth_View"
                                android:background="@drawable/icon_tshirt"
                                android:layout_gravity="center" />
                        </FrameLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5">

                            <ImageButton
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:id="@+id/d_jupon_image"
                                android:layout_gravity="center" />

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"

                                android:id="@+id/d_jupon_View"
                                android:background="@drawable/icon_long"
                                android:layout_gravity="center" />
                        </FrameLayout>
                    </LinearLayout>







                </LinearLayout>





                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="名前(ニックネーム)"
                        android:id="@+id/d_name_label"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/font_size_L"
                        android:textColor="@color/app_text"
                        android:layout_marginLeft="@dimen/padding_size_SS"
                        android:layout_marginRight="@dimen/padding_size_SS"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/font_size_L"
                        android:id="@+id/d_name"
                        android:layout_marginLeft="@dimen/padding_size_SS"
                        android:layout_marginRight="@dimen/padding_size_SS"
                        android:layout_marginBottom="@dimen/padding_size_SS"
                        android:textColor="#000000" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="性別"
                                android:id="@+id/d_sex_label"
                                android:textSize="@dimen/font_size_L"
                                android:textColor="@color/app_text"
                                android:layout_marginLeft="@dimen/padding_size_SS"
                                android:layout_marginRight="@dimen/padding_size_SS"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/font_size_L"
                                android:id="@+id/d_sex"
                                android:layout_marginLeft="@dimen/padding_size_SS"
                                android:layout_marginRight="@dimen/padding_size_SS"
                                android:layout_marginBottom="@dimen/padding_size_SS"
                                android:textColor="#000000" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="年齢"
                                android:id="@+id/d_age_label"
                                android:textSize="@dimen/font_size_L"
                                android:textColor="@color/app_text"
                                android:layout_marginLeft="@dimen/padding_size_SS"
                                android:layout_marginRight="@dimen/padding_size_SS"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="@dimen/font_size_L"
                                android:id="@+id/d_age"
                                android:layout_marginLeft="@dimen/padding_size_SS"
                                android:layout_marginRight="@dimen/padding_size_SS"
                                android:layout_marginBottom="@dimen/padding_size_SS"
                                android:textColor="#000000" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="困ったこと"
                        android:id="@+id/d_req_label"
                        android:textSize="@dimen/font_size_LL"
                        android:textColor="@color/app_text"
                        android:layout_marginLeft="@dimen/padding_size_SS"
                        android:layout_marginRight="@dimen/padding_size_SS"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/font_size_LL"
                        android:id="@+id/d_req"
                        android:layout_marginLeft="@dimen/padding_size_SS"
                        android:layout_marginRight="@dimen/padding_size_SS"
                        android:layout_marginBottom="@dimen/padding_size_SS"
                        android:textColor="#000000" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text=""
                    android:id="@+id/d_detail_text"
                    android:textSize="@dimen/font_size_L"
                    android:layout_marginBottom="@dimen/padding_size_SS"
                    android:textColor="#000000" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="翻訳"
                    android:id="@+id/translation_button"
                    android:textSize="@dimen/font_size_L"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/padding_size_SS"
                    />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>



</ScrollView>




